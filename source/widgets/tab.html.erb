        <li><button class="x-demo-tab-control" data-x-role="tab" data-activate="true">Tab 1</button></li>
        <li><button class="x-demo-tab-control" data-x-role="tab">Tab 2</button></li>
        <li><button class="x-demo-tab-control" data-x-role="tab">Tab 3</button></li>
    </ol>

    <div class="x-demo-tabpanel" data-x-role="tabpanel">
